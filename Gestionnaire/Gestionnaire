    <section class="todoapp hide" id="monApp">

      <header class="header">

        <div id="noti" class="notify">{{ remaining }}</div>

        <h1 id="pageh1">Tâches</h1>

          <input class="new-todo"
            autofocus autocomplete="off"
            placeholder="Ajoutez une tâche"
            v-model="newTodo"
            @keyup.enter="addTodo">

      </header>

      <section class="main" v-show="todos.length" v-cloak>

        <input class="toggle-all" type="checkbox" v-model="allDone">

            <ul class="todo-list" v-sortable="{animation: 800, onEnd: reOrder}">

              <li v-for="todo in filteredTodos"
                  class="todo"
                  :key="todo.id"
                  :class="{ completed: todo.completed, editing: todo == editedTodo }">

                    <div class="view">

                      <input class="toggle" type="checkbox" v-model="todo.completed" @click="completedTodo(todo)">

                      <button class="destroy" @click.prevent="removeTodo(todo)"></button>

                      <label @dblclick="editTodo(todo, $event.target.value)">{{ todo.title }}</label>


                    </div>

                    <input class="edit" type="text"
                           v-model="todo.title"
                           v-todo-focus="todo == editedTodo"
                           @blur="doneEdit(todo)"
                           @keyup.enter="doneEdit(todo)"
                           @keyup.esc="cancelEdit(todo)">

              </li>

            </ul>

      </section>

        <footer class="footer" v-show="todos.length" v-cloak>

          <span class="todo-count">

            <strong>{{ remaining }}</strong> {{ remaining | pluralize }}

          </span>

          <ul class="filters">

            <li><a href="#/all" :class="{ selected: visibility == 'all' }">Toutes</a></li>

            <li><a href="#/active" :class="{ selected: visibility == 'active' }">En cours</a></li>

            <li><a href="#/completed" :class="{ selected: visibility == 'completed' }">Terminées</a></li>

          </ul>

          <button class="clear-completed" @click="removeCompleted(todos)" v-show="todos.length > remaining">
            Supprimer les tâches finies
          </button>

        </footer>

    </section>

